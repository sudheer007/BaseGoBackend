# Application settings
APP_NAME=secure-api
APP_ENV=development
APP_PORT=8080
APP_DEBUG=true
APP_SECRET=change_this_to_a_secure_random_string_in_production
APP_LOG_LEVEL=debug

# Database settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASS=postgres
DB_NAME=secureapi
DB_SSL_MODE=disable
DB_TIMEOUT=30
DB_MAX_CONNECTIONS=100
DB_IDLE_CONNECTIONS=10

# Redis settings (for rate limiting and session caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASS=
REDIS_DB=0

# JWT settings
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=72h

# Password security
PASSWORD_HASH_COST=12
PASSWORD_MIN_LENGTH=12

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=1m

# CORS settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type
CORS_EXPOSED_HEADERS=Content-Length
CORS_ALLOW_CREDENTIALS=true
CORS_MAX_AGE=12h

# Audit log settings
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90 